extends layout

block extendHeader
  link(rel="stylesheet", href="/stylesheets/main.css")

block content
  header
    h1 The Mega Forum
    p Talk about anything you want!
  main
    h2 Our threads
    each thread in threads
      a(href="/thread/" + thread.title)
        .thread
          h3= thread.threadname
          span Created by
          p.creator= thread.author
          span   on
          p.date= thread.date
          p.description= thread.text
  footer
