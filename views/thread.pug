doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width')
    title The Rant Board
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(rel='stylesheet', href='/stylesheets/thread.css')
  body
    .container
      header.page-header.text-center
        h1= thread.threadname
        p.text-info
          em Created By #{thread.author} on #{thread.date.toJSON().slice(0,10)}
      main
        .panel.form-container
          button.btn.btn-block.btn-primary.btn-lg.toggle-form(type='button')
            | New Rant
            span.caret
          form.well.hidden.rant-form
            .form-group.row
              .col-xs-12.col-sm-6
                label(for='new-name') Name:
                input#new-name.form-control(type='text', name='name', placeholder='Mr. Angry')
            .form-group.row
              .col-xs-12
                label(for='new-topic') Topic:
                textarea#new-topic.form-control(rows='6', placeholder='Rant goes here')
            button.btn.btn-primary.btn-lg(type='button')
              span.glyphicon.glyphicon-pencil
              |  Create
        .panel-group
          // Hér birtast færslur notenda
          each post in posts
            article.panel.panel-info.entry
              header.panel-heading(id=post.id)
                h3= post.author
                  small  posted
              .panel-body
                p= post.text
                .col-xs-offset-1
                  .replies
                    // Hér koma svör við færslu

        a(href="/") go back
  footer
  script(src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous")
  script(src="/javascripts/thread.js")
